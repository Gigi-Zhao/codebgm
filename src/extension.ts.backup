                        effect.particles.forEach(particle => {
                            particle.x += particle.vx;
                            particle.y += particle.vy;
                            particle.vy += particle.gravity; // Apply gravity
                            particle.life -= particle.fade;
                            
                            // Add trail effect
                            particle.trail.push({x: particle.x, y: particle.y, life: 1.0});
                            if (particle.trail.length > 8) {
                                particle.trail.shift();
                            }
                            
                            if (particle.life > 0) {
                                // Render trail
                                particle.trail.forEach((point, index) => {
                                    const trailAlpha = (point.life * particle.life * alpha) / particle.trail.length;
                                    effectsCtx.save();
                                    effectsCtx.globalAlpha = trailAlpha * 0.3;
                                    effectsCtx.fillStyle = particle.color;
                                    effectsCtx.shadowBlur = 8;
                                    effectsCtx.shadowColor = particle.color;
                                    effectsCtx.beginPath();
                                    effectsCtx.arc(point.x, point.y, particle.size * 0.5, 0, Math.PI * 2);
                                    effectsCtx.fill();
                                    effectsCtx.restore();
                                    point.life -= 0.1;
                                });
                                
                                // Render main particle
                                effectsCtx.save();
                                effectsCtx.globalAlpha = particle.life * alpha;
                                effectsCtx.fillStyle = particle.color;
                                effectsCtx.shadowBlur = 12;
                                effectsCtx.shadowColor = particle.color;
                                effectsCtx.beginPath();
                                effectsCtx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2);
                                effectsCtx.fill();
                                effectsCtx.restore();
                            }
                        });
                        
                        // Render sparks
                        effect.sparks.forEach(spark => {
                            spark.x += spark.vx;
                            spark.y += spark.vy;
                            spark.vy += 0.05; // Gravity
                            spark.life -= 0.01;
                            spark.flicker += 0.3;
                            
                            if (spark.life > 0) {
                                effectsCtx.save();
                                effectsCtx.globalAlpha = spark.life * alpha * (0.5 + 0.5 * Math.sin(spark.flicker));
                                effectsCtx.fillStyle = spark.color;
                                effectsCtx.shadowBlur = 6;
                                effectsCtx.shadowColor = spark.color;
                                effectsCtx.beginPath();
                                effectsCtx.arc(spark.x, spark.y, spark.size, 0, Math.PI * 2);
                                effectsCtx.fill();
                                effectsCtx.restore();
                            }
                        });
                        
                        // Render explosion burst effect
                        if (effect.explosionPhase < 0.3) {
                            const burstAlpha = (1 - effect.explosionPhase / 0.3) * alpha;
                            effectsCtx.save();
                            effectsCtx.globalAlpha = burstAlpha * 0.3;
                            effectsCtx.strokeStyle = effect.colors[0];
                            effectsCtx.lineWidth = 3;
                            effectsCtx.shadowBlur = 20;
                            effectsCtx.shadowColor = effect.colors[0];
                            effectsCtx.beginPath();
                            effectsCtx.arc(effect.x, effect.y, effect.burstRadius, 0, Math.PI * 2);
                            effectsCtx.stroke();
                            effectsCtx.restore();
                        }
                    }
                    
                    requestAnimationFrame(renderEffects);
                }
